                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>*@
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $("#RestaurantePart").hide();
        $("#exampleRadios1").on("change", () => {
            $("#ClientePart").show();
            $("#RestaurantePart").hide();
            $("#RestNameBox").val("");
            $("#Telefone").val("");
            $("#Address").val("");
            $("#DDS").val("");
            $("#OpenTime").val("");
            $("#CloseTime").val("");
            $("#DescRest").val("");
            $("#takeaway").prop("checked", false);
            $("#local").prop("checked", false);
            $("#entrega").prop("checked", false);
        });
        $("#exampleRadios2").on("change", () => {
            $("#ClientePart").hide();
            $("#RestaurantePart").show();
            $("#UserNameBox").val("");
        })
    </script>
